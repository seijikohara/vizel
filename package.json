{
  "name": "vizel",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/demo/*"
  ],
  "scripts": {
    "dev": "bun run dev:react",
    "dev:react": "bun run --cwd apps/demo/react dev",
    "dev:vue": "bun run --cwd apps/demo/vue dev",
    "dev:svelte": "bun run --cwd apps/demo/svelte dev",
    "dev:all": "concurrently -n react,vue,svelte -c blue,green,magenta \"bun run dev:react\" \"bun run dev:vue\" \"bun run dev:svelte\"",
    "build": "bun run --filter '@vizel/*' build",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.3.5",
    "concurrently": "^9.2.1",
    "lefthook": "^2.0.12",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  }
}
