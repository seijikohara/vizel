{
  "name": "vizel",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/demo/*"
  ],
  "scripts": {
    "dev:react": "npm run dev --workspace=@vizel/demo-react",
    "dev:vue": "npm run dev --workspace=@vizel/demo-vue",
    "dev:svelte": "npm run dev --workspace=@vizel/demo-svelte",
    "dev:all": "concurrently -n react,vue,svelte -c blue,green,magenta \"npm run dev:react\" \"npm run dev:vue\" \"npm run dev:svelte\"",
    "build": "npm run build --workspaces --if-present",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run build && vitepress build docs && npm run docs:build:demos",
    "docs:build:demos": "npm run docs:build:demo:react && npm run docs:build:demo:vue && npm run docs:build:demo:svelte && npm run docs:copy:demos",
    "docs:build:demo:react": "cd apps/demo/react && npx vite build --base=/vizel/demo/react/",
    "docs:build:demo:vue": "cd apps/demo/vue && npx vite build --base=/vizel/demo/vue/",
    "docs:build:demo:svelte": "cd apps/demo/svelte && npx vite build --base=/vizel/demo/svelte/",
    "docs:copy:demos": "mkdir -p docs/.vitepress/dist/demo && cp -r apps/demo/react/dist docs/.vitepress/dist/demo/react && cp -r apps/demo/vue/dist docs/.vitepress/dist/demo/vue && cp -r apps/demo/svelte/dist docs/.vitepress/dist/demo/svelte",
    "docs:preview": "vitepress preview docs",
    "test": "npm run test --workspaces --if-present",
    "test:ct": "concurrently -g -n react,vue,svelte -c blue,green,magenta \"npm run test:ct:react\" \"npm run test:ct:vue\" \"npm run test:ct:svelte\"",
    "test:ct:seq": "npm run test:ct:react && npm run test:ct:vue && npm run test:ct:svelte",
    "test:ct:react": "playwright test -c tests/ct/react/playwright-ct.config.ts",
    "test:ct:vue": "playwright test -c tests/ct/vue/playwright-ct.config.ts",
    "test:ct:svelte": "playwright test -c tests/ct/svelte/playwright-ct.config.ts",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@braintree/sanitize-url": "^7.1.1",
    "@playwright/experimental-ct-react": "^1.57.0",
    "@playwright/experimental-ct-svelte": "^1.57.0",
    "@playwright/experimental-ct-vue": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/compiler-dom": "^3.5.26",
    "concurrently": "^9.2.1",
    "cytoscape": "^3.33.1",
    "cytoscape-cose-bilkent": "^4.1.0",
    "dayjs": "^1.11.19",
    "debug": "^4.4.3",
    "lefthook": "^2.0.13",
    "mermaid": "^11.12.2",
    "playwright": "^1.57.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sass": "^1.97.2",
    "svelte": "^5.46.4",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.26"
  }
}
